<div class="container">

  <p id="notice"><%= notice %></p>
  
  <div class= "row">
    <div class= "col-sm-8">
      <div class="product_image">
        <%= image_tag(@product.image_url, size: "300") %>
      </div>
    </div>

    <div class= "col-sm-4">
      <div class="product_info">
        <p><strong><%= @product.name %></strong></p>

        <p>
          <strong>Description:</strong>
          <%= @product.description %>
        </p>

        <p>
          <strong>Color:</strong>
          <%= @product.color %>
        </p>

        <p>
          <strong>Price: $</strong>
          <%= @product.price %>
        </p>

        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %>
      </div>
    </div>
  </div>
</div>
