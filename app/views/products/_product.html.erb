  		<h4><%= link_to product.name, product %></h4>
   		<p>Color: <%= product.color %></p>
  		<p>Price: <%= number_to_currency(product.price, unit: 'â‚¬', precision: 2) %></p>
  		<br>
 
  	<%= link_to 'Edit', edit_product_path(product) %>
