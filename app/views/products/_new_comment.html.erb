<% if signed_in? %>

  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
 
    <div class="form-group">
      <p><small>
        <%= f.label :body, "Add Comments" %></small><br>
        <%= f.text_area :body, class:"form-control" %>
      </p>
    </div>  
    <p>
      <div class="rating"></div>
    </p>
    <p><small>
      <%= f.submit "Submit" %></small>
    </p>
  <% end %>
<% end %>